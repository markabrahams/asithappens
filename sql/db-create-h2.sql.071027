CREATE TABLE `data` (
  `sessionID` int(11) NOT NULL default '0',
  `position` int(11) NOT NULL default '0',
  `time` bigint(20) NOT NULL default '0',
  `value` double default NULL,
  PRIMARY KEY  (`sessionID`,`time`,`position`)
);

CREATE TABLE `headings` (
  `sessionID` int(11) NOT NULL default '0',
  `position` int(11) NOT NULL default '0',
  `name` varchar(255) NOT NULL default '',
  PRIMARY KEY  (`sessionID`,`position`)
);

CREATE TABLE `labels` (
  `sessionID` int(11) NOT NULL default '0',
  `index` int(11) NOT NULL auto_increment,
  `time` bigint(20) NOT NULL default '0',
  `value` double NOT NULL default '0',
  `name` varchar(255) NOT NULL default '',
  PRIMARY KEY  (`index`)
);

CREATE TABLE `sessions` (
  `sessionID` int(11) NOT NULL auto_increment,
  `dataTypeID` int(11) NOT NULL default '0',
  `device` varchar(255) NOT NULL default '',
  `pollInterval` bigint(20) default NULL,
  `port` varchar(255) default NULL,
  `startTime` bigint(20) NOT NULL default '0',
  `finishTime` bigint(20) default NULL,
  `collecting` tinyint(1) NOT NULL default '1',
  `title` varchar(255) default NULL,
  `direction` int(11) default NULL,
  PRIMARY KEY  (`sessionID`)
);

CREATE TABLE `devices` (
  `name` varchar(255) NOT NULL,
  `ipAddress` varchar(255) default NULL,
  `hardwareAddress` varchar(255) default NULL,
  `community` varchar(255) default NULL,
  PRIMARY KEY (`name`)
);

CREATE TABLE `layouts` (
  `name` varchar(255) NOT NULL,
  PRIMARY KEY (`name`)
);

CREATE TABLE `collectorDefinitions` (
  `collectorDefinitionID` int(11) NOT NULL auto_increment,
  `layout` varchar(255) NOT NULL,
  `dataTypeID` int(11) NOT NULL,
  `device` varchar(255) NOT NULL,
  `pollInterval` bigint(20) NOT NULL,
  `port` varchar(255) default NULL,
  `direction` int(11) default NULL,
  PRIMARY KEY (`collectorDefinitionID`)
);
 
CREATE TABLE `bandwidthCollector` (
  `bandwidthCollectorID` int(11) NOT NULL auto_increment,
  `layout` varchar(255) NOT NULL,
  `device` varchar(255) NOT NULL,
  `pollInterval` bigint(20) NOT NULL,
  `prefer64BitCounters` boolean NOT NULL default FALSE,
  PRIMARY KEY (`bandwidthCollectorID`)
);

CREATE TABLE `bandwidthCollectorPorts` (
  `bandwidthCollectorID` int(11) NOT NULL,
  `port` varchar(255) NOT NULL,
  PRIMARY KEY (`bandwidthCollectorID`, `port`)
);
